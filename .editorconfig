# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# see http://editorconfig.org

# Current standards are inspired by a combination
# of /tg/station and goonstation configurations refined over the years
root = true

[*]
indent_style = tab
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{dm,dme,dmm}]
end_of_line = lf

# Avoid automatically formatting these as DreamMaker has its own preferred style
# with some trailing whitespace and newlines.
# Just manually edit these files and keep them clean.
[*.{dme,dmf}]
trim_trailing_whitespace = false

[*.sh]
end_of_line = lf

[*.{js,html,css,yml,yaml,json,toml}]
indent_style = space
indent_size = 2

# Based on the common pattern throughout the existing files and other codebases
[*.{tmpl}]
indent_style = tab
indent_size = 4

[*.txt]
insert_final_newline = false

[Dockerfile]
indent_style = space

[*.py]
indent_style = space

# Trailing whitespace allows to make line breaks in Markdown
# See https://github.com/tgstation/tgstation/pull/55951
[*.md]
trim_trailing_whitespace = false

[.gitattributes]
indent_style = space
indent_size = 4

[.sql]
indent_style = space
indent_size = 2
